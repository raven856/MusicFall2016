@model MusicFall2016.Models.Album

@{ ViewData["Title"] = "Edit"; }

<h2>Edit Album:</h2>
<h3>
    @*put Correct Album in*@
</h3>

<div class="form">
    <form asp-action="EditAlbum" class="form-horizontal">

        <input type="hidden" asp-for="AlbumID" value="@Model.AlbumID" />

        <label asp-for="Title" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <label asp-for="Artist" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ArtistID" asp-items="ViewBag.ArtistList"> </select>
        </div>


        <label asp-for="Genre" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="GenreID" asp-items="ViewBag.GenreList"></select>
        </div>

        <label asp-for="Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Save Changes</button>
            </div>
        </div>
    </form>
</div>