                    <a asp-action="LikeAlbum" asp-route-id="@album.AlbumID">Like</a>
                    <a asp-action="DetailsAlbum" asp-route-id="@album.AlbumID">Details</a>
                    <a asp-action="EditAlbum" asp-route-id="@album.AlbumID">Edit</a>
                    <a asp-action="DeleteAlbum" asp-route-id="@album.AlbumID">Delete</a>

                </td>*@
