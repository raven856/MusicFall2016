@model MusicFall2016.Models.Album

@ViewData["Title"]

<h2>The Album is:</h2>

<div class="form">
    <form asp-action="CreateAlbum" class="form-horizontal">

            <label asp-for="Title" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

        <label asp-for="Artist" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ArtistID" asp-items="ViewBag.ArtistList"> </select>
            or new Artist
            <input asp-for="Artist.Name" class="form-control"/>
            <span asp-validation-for="Artist.Name" class="text-danger"></span>
        </div>


        <label asp-for="Genre" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="GenreID" asp-items="ViewBag.GenreList"></select>
            or new Genre
            <input asp-for="Genre.Name" class="form-control"/>
            <span asp-validation-for="Genre.Name" class="text-danger"></span>

        </div>

            <label asp-for="Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Price" class= "form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info">Add Album</button>
                </div>
            </div>
</form>
</div>