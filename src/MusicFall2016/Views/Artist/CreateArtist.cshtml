@model MusicFall2016.Models.Artist

@ViewData["Title"]

<h2>The Artist is:</h2>

<div class="form">
    <form asp-action="CreateArtist" class="form-horizontal">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <label asp-for="Bio" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Bio" class="form-control" />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Add Artist</button>
            </div>
        </div>
    </form>
</div>