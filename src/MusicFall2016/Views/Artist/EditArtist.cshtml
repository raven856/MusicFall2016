@model MusicFall2016.Models.Artist

@{ ViewData["Title"] = "Edit Artist"; }

<h2>Edit Artist:</h2>
<h3>
    @*put Correct artist in*@
</h3>

<div class="form">
    <form asp-action="EditArtist" class="form-horizontal">

        <input type="hidden" asp-for="ArtistID" value="@Model.ArtistID" />

        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <label asp-for="Bio" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Bio" class="form-control" />
            <span asp-validation-for="Bio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Edit Artist</button>
            </div>
        </div>
    </form>
 </div>
