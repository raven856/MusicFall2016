@model MusicFall2016.Models.Playlist

<head>
    @ViewData["Title"] = CreatePlaylist
</head>
<body>

    <h2>Create Playlist</h2>

    <form asp-action="CreatePlaylist" class="form-horizontal">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Add Playlist</button>
            </div>
        </div>
    </form>

</body>